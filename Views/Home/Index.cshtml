                                                                <!-- Thêm lớp mb-3 cho khoảng cách dưới giá -->
                                                                <span class="price">
                                                                    <span class="new-price">@discountedPrice.ToString("N0")đ</span>
                                                                </span>
                                                            </div>
                                                        }
