@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Role List";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<div class="container-fluid">
    <div class="table-responsive">
        <h3 class="my-4">Danh Sách Roles</h3>
        <a asp-action="Create" asp-controller="Role" class="btn btn-primary mb-3">Thêm roles</a>
        <table class="table table-bordered table-striped">

            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Role Name</th>
                    <th scope="col">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa Role');">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<partial name="_paging" model="@pager" />
