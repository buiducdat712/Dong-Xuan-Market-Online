@model IEnumerable<CategorySubModel>
@{
    ViewData["title"] = "Product Sub Category List";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<div class="container-fluid">
<div class="table-responsive">
    <h3 class="my-4">Danh Sách Danh Mục Con</h3>
    <a asp-action="Create" asp-controller="Categorysub" class="btn btn-primary mb-3">Thêm danh mục con</a>
        <table class="table table-bordered table-striped" id="myTable">

        <thead class="thead-dark">
            <tr>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Slug</th>
                    <th>Trạng thái</th>
                    <th>Danh mục chính</th>
                    <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Slug</td>
                        <td>
                            @if (item.Status == 1)
                            {
                                <p>Hiển thị</p>
                            }
                            else
                            {
                                <p>Ẩn</p>
                            }
                        </td>
                        <td>@item.Category.Name</td>
                        <td>
                            <a asp-action="Edit" asp-controller="CategorySub" asp-route-Id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Delete" asp-controller="CategorySub" asp-route-Id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục @item.Name?');">Xóa</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>
</div>

